#browser
bindsym $mod+w exec chromium ~/Documents/StartPage/index.html
bindsym $mod+shift+w exec luakit

#explorer
bindsym $mod+e exec --no-startup-id $terminal --title 'lf' -e 'lf'
bindsym $mod+shift+e exec --no-startup-id nemo

bindsym $mod+n exec --no-startup-id rofi -show window

