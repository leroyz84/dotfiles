set $scr_path=~/.config/i3/conf.d/screensaver

exec --no-startup-id xautolock -corners +00- -time 10 -notify 10 -notifier ~/.config/i3/conf.d/screensaver/notify.sh -locker ~/.config/i3/conf.d/screensaver/i3lock.sh

